$(".restaurant_like_count").html("(<%= @restaurant.r_like %> 추천)");

<% if @test.first.recommend == true %>
	$("#like_button").html('<%= link_to image_tag("like.png", :width => "55px"), valuations_path(:restaurant_id => @restaurant.id), method: :post, remote: true %> <br>');
<% else %>
	$("#like_button").html('<%= link_to image_tag("unlike.png", :width => "55px"), valuations_path(:restaurant_id => @restaurant.id), method: :post, remote: true %> <br>');
<% end %>