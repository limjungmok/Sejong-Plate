<% provide(:title, "Sejong Plate") %>

<html>
  <head>
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
      <!-- Indicators ( o o o ) -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>        
      </ol>

      <!-- 메인 슬라이더 내용들 -->
      <!-- 추천수 높은 3개 보여준다 -->
      <div class="carousel-inner">
        <div class="active item", id="slide_item">
           <div class="c_box">
              <div class="info_title">
                <%= @restaurant_ranks.first.r_name %><br>
              </div>
              <div class="info_detail">
                <%= @restaurant_ranks.first.r_like %>
              </div>
           </div>
          <%= link_to image_tag(@restaurant_ranks.first.albums.first.picture,
           :width => '100%', :height => '100%'), restaurant_path(@restaurant_ranks.first) %>
        </div>
        <div class="item", id="slide_item">
           <div class="c_box">
              <div class="info_title">
                <%= @restaurant_ranks.second.r_name %><br>
              </div>
              <div class="info_detail">
                <%= @restaurant_ranks.second.r_like %>
              </div>
           </div>          
          <%= link_to image_tag(@restaurant_ranks.second.albums.first.picture,
           :width => '100%', :height => '100%'), restaurant_path(@restaurant_ranks.second) %>
        </div>
        <div class="item", id="slide_item">
           <div class="c_box">
              <div class="info_title">
                <%= @restaurant_ranks.third.r_name %><br>
              </div>
              <div class="info_detail">
                <%= @restaurant_ranks.third.r_like %>
              </div>
           </div>          
          <%= link_to image_tag(@restaurant_ranks.third.albums.first.picture,
           :width => '100%', :height => '100%'), restaurant_path(@restaurant_ranks.third) %>
        </div>
      </div>

    </div>
  </head>
  <body>
    <div class = "container">
      <div class = "inner-view">
        <% @restaurants.each do |r| %>
        <div class = "col-xs-4">
          <div class = "thumbnail"  onclick="location.href='/restaurants/<%= r.id %>'">
            
            <% if r.albums[0].nil? %>
            <% else %>
            <div class ="info-box">
              <div class = "info">
                <%= truncate(r.r_name, length: 10) %><br>
              </div>
              <div class="info-detail"%>
                <b style="color:red"><%= r.r_like %></b><small> 좋아요 </small> | 
                <b style="color:red"><%= r.comments.count %></b><small> 의견 </small>
              </div>
            </div>
            
              <%= link_to image_tag r.albums.first.picture %>

            <% end %>

          </div>
        </div>
        <% end %>
      </div>
    </div>

  </body>
</html>