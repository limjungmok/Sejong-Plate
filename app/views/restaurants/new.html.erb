<%= form_for(@restaurant, :html => { :multipart => true}) do |f| %>

	<div class="field">
		<%= f.label :상호명 %> <br>
		<%= f.text_field :r_name %>
	</div>

	<div class="field">
		<%= f.label :연락처 %> <br>
		<%= f.text_field :r_phone_number %>
	</div>	
	<div>
	
	</div>
	<div class="field">
		<%= f.label :소요시간 %> <br>
		<%= f.select :r_distance_door, options_for_select([["정문", "정문"], ["후문", "후문"], ["쪽문", "쪽문"]]) %> 도보
		<%= f.text_field :r_distance %> 분
	</div>	

	<div class="field">
		<%= f.label :영업시간 %> <br>
		<%= f.text_area :r_time %>
	</div>	

	<div class="field">
		<%= f.label :배달유무 %> <br>
		<%= f.text_field :r_code %>
	</div>	

	<div class="field">
		<%= f.label :위도 %> <br>
		<%= f.text_field :r_latitude %>
	</div>

	<div class="field">
		<%= f.label :경도 %> <br>
		<%= f.text_field :r_longtitude %>
	</div>

	<%= f.fields_for :사진 do |p| %>
		<div class="field">
			<%= p.label :picture %>
			<%= p.file_field :picture, :multiple => true, name: "albums[picture][]" %>
		</div>
	<% end %>
	<br>
	<div class="actions">
		<%= f.submit %>
	</div>
	<br>

	현재 유저 숫자 : <%= @admin_info_user.count %><br>
	현재 댓글 숫자 : <%= @admin_info_comment.count %><br>

<% end %>